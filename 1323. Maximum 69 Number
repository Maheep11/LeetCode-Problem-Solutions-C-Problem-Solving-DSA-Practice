# Fast & Simple # 

class Solution {
public:
    int maximum69Number (int num) {
         string s = to_string(num);  // convert number to string
    
        for (char &c : s) {
            if (c == '6') {   // change the first '6' to '9'
                c = '9';
                break;        // only one change allowed
            }
        }
    return stoi(s);
    }
};

Time Complexity - O(N)      // N is the number of digits 
space complexity - O(1)     // It uses no extra space


