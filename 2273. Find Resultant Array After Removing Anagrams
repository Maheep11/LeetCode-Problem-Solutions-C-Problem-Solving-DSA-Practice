class Solution {
public:

    bool anagram(string a , string b ){
        sort(a.begin(), a.end()) ; 
        sort(b.begin(), b.end()) ;
        return a==b ;  
    }
    
    vector<string> removeAnagrams(vector<string>& words) {
        vector<string> res;
        for(string word : words){
            if(!res.empty() && anagram(res.back(), word)){
                continue ; 
            }
            else {
                res.push_back(word) ; 
            }
        }
        return res; 
    }
};

Time Complexity - O(N) ; 
Space Complexity - O(N) ; 
