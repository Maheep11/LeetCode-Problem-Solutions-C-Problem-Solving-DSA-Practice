class Solution {
public:

string add_num(string num1, string num2){
    string ans ;
    int index1 = num1.size()-1 , index2 = num2.size()-1 ;
    int sum , carry = 0 ; 
    while(index2>=0){
        sum = (num1[index1]-'0')+(num2[index2]-'0') + carry ; 
        carry = sum/10 ; 
        char c = '0' + sum%10 ; 
        ans += c ; 
        index2-- , index1-- ; 
    } 
    while(index1>=0){
        sum = (num1[index1]-'0')+ carry ;
        carry = sum/10 ; 
        char c = '0' + sum%10 ;
        ans+= c ; 
        index1-- ; 
    }
    if(carry){
        ans += (carry + '0'); 
    }

    reverse(ans.begin(), ans.end()) ; 

    return ans ; 

}
    string addStrings(string num1, string num2) {
        if(num1.size()>num2.size()){
            return add_num(num1 , num2) ; 
        }    
        else {
            return add_num(num2 , num1 ) ;                   
        }
    }
};

Time complexity = O(num1 + num2) 
